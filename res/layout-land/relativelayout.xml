<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@drawable/welcome">
	<LinearLayout
		android:id="@+id/landscape1"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">    
		<Button android:text="@string/sRelative"
			android:id="@+id/buttonRelative"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10sp"
			android:layout_marginRight="5sp"
			android:layout_weight="1"
			>
		</Button>
		<Button android:text="@string/sExit"
			android:id="@+id/buttonExit"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="5sp"
			android:layout_marginRight="10sp"
			android:layout_weight="1"
			>
		</Button>
	</LinearLayout>
<Button android:text="@string/sLol"
	android:id="@+id/buttonLol"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:layout_above="@+id/landscape1"
	android:layout_marginLeft="10sp"
	android:layout_marginRight="10sp"
	>
</Button>
<Button android:text="@string/sGiveQ"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:id="@+id/buttonGiveQ"
	android:layout_above="@id/buttonLol"
	android:layout_marginLeft="10sp"
	android:layout_marginRight="10sp"
	>
</Button>
<Button android:text="@string/sAnswerQ"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:id="@+id/buttonAnswerQ"
	android:layout_above="@id/buttonGiveQ"
	android:layout_marginLeft="10sp"
	android:layout_marginRight="10sp"
	>
</Button>
</RelativeLayout>